{
  "swagger": "2.0",
  "info": {
    "title": "Golang Todo API app",
    "contact": {
      "email": "suportebeloj@gmail.com",
      "name": "Carlos"
    },
    "version": "0.0.1"
  },
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Login route",
        "description": "Routes used to authentication a existent user.",
        "parameters": [
          {
            "name": "Request body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/FormLogin"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Will be returned a valid access token valid for 1 hour",
            "schema": {
              "type": "object",
              "title": "Success login",
              "example": {
                "token": "validtokenhere"
              }
            }
          },
          "400": {
            "description": "Will be returned an error message."
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Route to register new user",
        "parameters": [
          {
            "name": "Request body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/FormRegister"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "New user will be created and returned a access token valid for 1 hour.",
            "schema": {
              "type": "object",
              "title": "Success signup",
              "example": {
                "token": "validtokenhere"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "FormLogin": {
      "required": [
        "username",
        "password"
      ],
      "type": "object",
      "properties": {
        "username": {
          "title": "Username",
          "type": "string"
        },
        "password": {
          "title": "Password",
          "type": "string"
        }
      }
    },
    "FormRegister": {
      "type": "object",
      "required": [
        "username",
        "password",
        "email"
      ],
      "properties": {
        "username": {
          "title": "Username",
          "type": "string"
        },
        "password": {
          "title": "Password",
          "type": "string"
        },
        "email": {
          "title": "Email",
          "type": "string"
        }
      }
    }
  }
}